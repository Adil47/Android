<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity" >

    <LinearLayout
        android:orientation="vertical"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:text="Alert Dialog"
            android:onClick="alert_dialog"
            android:layout_height="wrap_content"></Button>
        <Button
            android:layout_width="wrap_content"
            android:text="Progress Dialog (Horizontal)"
            android:onClick="progress_dialog_H"
            android:layout_height="wrap_content"></Button>
        <Button
            android:layout_width="wrap_content"
            android:text="Progress Dialog (Ring)"
            android:onClick="progress_dialog_Ring"
            android:layout_height="wrap_content"></Button>
        <Button
            android:layout_width="wrap_content"
            android:text="Custom Alert Dialog"
            android:onClick="custom_alertDialog"
            android:layout_height="wrap_content"></Button>

</LinearLayout>

</RelativeLayout>