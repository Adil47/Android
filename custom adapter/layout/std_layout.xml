<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/stdImage"
        android:src="@drawable/img5"
        android:layout_marginRight="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp">

    </de.hdodenhof.circleimageview.CircleImageView>


    <TextView
        android:id="@+id/stdId"
        android:textColor="#000"
        android:layout_toRightOf="@id/stdImage"
        android:textSize="20dp"
        android:text="101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/stdName"
        android:layout_below="@id/stdId"
        android:layout_alignStart="@id/stdId"
        android:textSize="17dp"
        android:text="Sana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/stdPhone"
        android:layout_below="@id/stdName"
        android:layout_alignStart="@id/stdId"
        android:textSize="17dp"
        android:text="Sana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/stdEmail"
        android:layout_below="@id/stdPhone"
        android:layout_alignStart="@id/stdId"
        android:textSize="17dp"
        android:text="Sana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>



</RelativeLayout>
